<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/Space_Manager_Plugin_Icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/Space_Manager_Plugin_Main_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/Space_Manager_Plugin_Icon"
        android:text="插件:测试插件"
        android:textColor="@color/common_font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Space_Manager_Plugin_Main_Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Space_Manager_Plugin_Main_Name"
        android:layout_toRightOf="@id/Space_Manager_Plugin_Icon"
        android:text="插件本体大小:100MB"
        android:textColor="@color/common_font_color"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/Space_Manager_Plugin_ConfigSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Space_Manager_Plugin_Main_Size"
        android:layout_toRightOf="@id/Space_Manager_Plugin_Icon"
        android:text="插件配置文件大小:100MB"
        android:textColor="@color/common_font_color"
        android:textSize="16sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/Space_Manager_Plugin_Clean_Instance"
        android:text="清理该项"/>
</RelativeLayout>